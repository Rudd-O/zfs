#!/bin/bash

. /lib/dracut-zfs-lib.sh

_do_zpool_export() {
	ret=0
	errs=""
	final="${1}"

	info "ZFS: Exporting ZFS storage pools..."
	errs=$(export_all -F 2>&1)
	ret=$?
	[ -z "${errs}" ] || echo "${errs}" | vwarn
	[ -z "${errs}" ] || (echo '====        ACTIVE SWAP DEVICES         ====' ; swapon -s ; echo '==== OPEN FILES ON MOUNTED FILE SYSTEMS ====' ; mount | awk ' { print $3 } ' | egrep -v '^/($|proc|sys|run|dev)($|/)' | xargs -n 1 lsof +D) | vwarn
	if [ "x${ret}" != "x0" ]; then
		info "ZFS: There was a problem exporting pools."
	fi

	if [ "x${final}" != "x" ]; then
		info "ZFS: pool list"
		zpool list 2>&1 | vinfo
	fi

	return ${ret}
}

if command -v zpool >/dev/null; then
	_do_zpool_export "${1}"
else
	:
fi
