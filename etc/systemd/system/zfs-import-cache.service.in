[Unit]
Description=Import ZFS pools by cache file
Documentation=man:zpool(8)
DefaultDependencies=no
Requires=systemd-udev-settle.service
After=systemd-udev-settle.service
After=cryptsetup.target
After=systemd-remount-fs.service
Before=zfs-import.target
ConditionPathExists=@sysconfdir@/zfs/zpool.cache

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/bash -c 'command -v getargbool >/dev/null || test -f /lib/dracut-lib.sh && . /lib/dracut-lib.sh || getargbool() { return 1 ; } ; if getargbool 0 zfs_force -y zfs.force -y zfsforce ; then ZPOOL_IMPORT_OPTS="${ZPOOL_IMPORT_OPTS} -f" ; fi ; @sbindir@/zpool import -c @sysconfdir@/zfs/zpool.cache $ZPOOL_IMPORT_OPTS -aN'
ExecStartPost=/bin/bash -c "/bin/systemctl set-environment BOOTFS=$(@sbindir@/zpool list -H -o bootfs | /bin/awk '$1 != \"-\" {print; exit}')"
StandardOutput=journal+console
StandardError=journal+console

[Install]
WantedBy=zfs-import.target
